@model CinemaTicketSystem.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Book Tickets";
}

<h2>Book Tickets for @Model.MovieTitle</h2>

<div class="row">
    <div class="col-md-6">
        <p><strong>Screening Time:</strong> @Model.ScreeningTime.ToString("g")</p>
        <p><strong>Ticket Price:</strong> @Model.TicketPrice.ToString("C")</p>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScreeningId" />

            <div class="form-group">
                <label asp-for="NumberOfTickets" class="control-label"></label>
                <input asp-for="NumberOfTickets" class="form-control" />
                <span asp-validation-for="NumberOfTickets" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Book Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
